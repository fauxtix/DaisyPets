<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"            
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPets.Mvvm.Views.Pets.PetDetailPage"
             xmlns:models ="clr-namespace:MauiPetsApp.Core.Application.ViewModels;assembly=MauiPets.Core"
             xmlns:viewmodel="clr-namespace:MauiPets.Mvvm.ViewModels.Pets"
             xmlns:viewmodelVaccine="clr-namespace:MauiPets.Mvvm.ViewModels.Vaccines"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:converters ="clr-namespace:MauiPets.Converters"             
              x:DataType="viewmodel:PetDetailViewModel"
             Title="{Binding  PetVM.Nome}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save data" Command="{Binding AddOrEditPetCommand  }"
                 IconImageSource="icon_edit.svg" />
        <ToolbarItem Text="Delete Pet" Command="{Binding DeletePetCommand  }"
                 IconImageSource="icon_delete.svg" />
        <ToolbarItem Text="Return" Command="{Binding GoBackCommand  }"
                 IconImageSource="icon_close.svg" />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <converters:NextDoseDateConverter x:Key="nextDoseDateConverter" />
        <converters:StringToDateConverter x:Key="stringToDateConverter"/>
        <ResourceDictionary>
            <Style x:Key="MediumLabelBold" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
            <Style x:Key="MediumLabel" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
            </Style>
            <Style x:Key="LargeLabel" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
            </Style>
            <Color x:Key="LightBackground">#FAF9F8</Color>
            <Color x:Key="DarkBackground">Black</Color>
            <Color x:Key="Primary">#FFC107</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <ScrollView BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">
            <Grid RowDefinitions="Auto,Auto, Auto, Auto, Auto, Auto, Auto, *">
                <BoxView
                    BackgroundColor="{StaticResource Primary}"
                    Grid.RowSpan="2"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"/>
                <Border StrokeShape="RoundRectangle 50"
                    Stroke="White"
                    StrokeThickness="6"
                    HeightRequest="160"
                    WidthRequest="220"
                    Margin="0,8,0,0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <Image Aspect="AspectFill"
                        HeightRequest="160"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Source="{Binding PetVM.Foto}"
                        WidthRequest="200"/>
                </Border>
                <Frame Grid.Row="1" CornerRadius="30" HasShadow="True" Margin="0,5,0,5" BorderColor="Black" HeightRequest="65" WidthRequest="200">
                    <Label Style="{StaticResource LargeLabel}" 
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="Black"
                       Text="{Binding PetVM.Nome}" 
                       HorizontalOptions="Center"
                       Margin="0"/>
                </Frame>
                <Border Grid.Row="2" Stroke="#2B0B98"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 22"
                    Background="#fff"
                    Padding="8,2,8,0"
                    Margin="5"
                    HorizontalOptions="FillAndExpand">

                    <Frame Grid.Row="2" CornerRadius="40" HasShadow="False" Margin="5" BorderColor="Transparent">
                        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" 
                          RowSpacing="5"
                          HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource MediumLabel}" >Data Nascº</Label>
                            <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource MediumLabelBold}"  Text="{Binding PetVM.DataNascimento, Converter={StaticResource stringToDateConverter},  StringFormat='{0:dd/MM/yyyy}'}" />
                            <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource MediumLabel}"  >Espécie</Label>
                            <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding PetVM.EspecieAnimal}" />
                            <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource MediumLabel}"  >Género</Label>
                            <Label Grid.Row="2" Grid.Column="1"  Style="{StaticResource MediumLabelBold}" Text="{Binding Gender}" />
                            <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource MediumLabel}" >Raça</Label>
                            <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding PetVM.RacaAnimal}" />
                            <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource MediumLabel}" >Temperamento</Label>
                            <Label Grid.Row="4" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding PetVM.TemperamentoAnimal}" />
                            <Label Grid.Row="5" Grid.Column="0" Style="{StaticResource MediumLabel}" >Medicação</Label>
                            <Label Grid.Row="5" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding PetVM.MedicacaoAnimal}" />
                            <Label Grid.Row="6" Grid.Column="0" Style="{StaticResource MediumLabel}"  >Doença crónica</Label>
                            <Label Grid.Row="6" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding PetVM.DoencaCronica}" />
                            <Label Grid.Row="7" Grid.Column="0" Style="{StaticResource MediumLabel}"  >Tamanho</Label>
                            <Label Grid.Row="7" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding PetVM.TamanhoAnimal}" />
                            <Label Grid.Row="8" Grid.Column="0" Style="{StaticResource MediumLabel}" >Condição</Label>
                            <Label Grid.Row="8" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding PetVM.SituacaoAnimal}" />
                        </Grid>
                    </Frame>
                </Border>
                <!--<Border>
                <Frame>
                    <Grid x:Name="GridTeste"
                          ColumnDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" ColumnSpacing="10">
                        <Image Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Source="bxs_dog.svg"/>
                        <Label Grid.Row="10" Grid.Column="1" Text="Raça" FontSize="Header" FontAttributes="Bold"/>
                        <Label Grid.Row="10" Grid.Column="1" Text="{Binding PetVM.RacaAnimal}" FontSize="14" />
                        <Image Grid.Row="9" Grid.Column="2" Grid.ColumnSpan="2" Source="male_icon.png"/>
                        <Label Grid.Row="10" Grid.Column="3" Text="Género" FontSize="Header" FontAttributes="Bold"/>
                        <Label Grid.Row="10" Grid.Column="3" Text="{Binding Gender}" FontSize="14" />
                        <Image Grid.Row="9" Grid.Column="4" Grid.ColumnSpan="2" Source="schedule_icon.svg"/>
                        <Label Grid.Row="10" Grid.Column="5" Text="Idade" FontSize="Header" FontAttributes="Bold"/>
                        <Label Grid.Row="10" Grid.Column="5" Text="{Binding PetVM.DataNascimento}" FontSize="14" />
                    </Grid>

                </Frame>

            </Border>-->
                <Border Grid.Row="3" Stroke="#2B0B98"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 22"
                    Background="#fff"
                    Padding="8,2,8,0"
                    Margin="5"
                    HorizontalOptions="FillAndExpand">
                    <Frame Grid.Row="3" CornerRadius="40" HasShadow="False" BorderColor="Transparent">
                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowSpacing="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource MediumLabel}" >Chipado</Label>
                            <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding Chipped}" />
                            <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource MediumLabel}" >Código Chip</Label>
                            <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding PetVM.NumeroChip}" />
                            <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource MediumLabel}" >Data Chip</Label>
                            <Label Grid.Row="2" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding PetVM.DataChip}" />
                            <Label Grid.Row="3" Margin="0,5,0,0" Grid.Column="0" Style="{StaticResource MediumLabel}" >Esterilizado</Label>
                            <Label Grid.Row="3" Margin="0,5,0,0" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding Sterilized}" />
                            <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource MediumLabel}" >Padrinho</Label>
                            <Label Grid.Row="4" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding GodFather}" />
                            <Label Grid.Row="5"  Margin="0,5,0,0" Grid.Column="0" Style="{StaticResource MediumLabel}" >Notas</Label>
                            <Label Grid.Row="5"  Margin="0,5,0,0" Grid.Column="1" Style="{StaticResource MediumLabelBold}" Text="{Binding PetVM.Observacoes}" />
                        </Grid>
                    </Frame>
                </Border>

                <Border Grid.Row="4" Stroke="#2B0B98"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 40,0,0,40"
                    Background="#fff"
                    Padding="8,2,8,0"
                    Margin="2"
                    HorizontalOptions="FillAndExpand">

                    <mct:Expander Padding="6" Margin="2"
                                  IsExpanded="false"  >
                        <mct:Expander.Header>
                            <Frame 
                                    BorderColor="Black"
                                    BackgroundColor="LightSteelBlue"
                                    CornerRadius="10">
                                <Label Text="Vacinas" FontSize="14" 
                                       FontAttributes="Bold" TextColor="Black"/>
                            </Frame>
                        </mct:Expander.Header>
                        <mct:Expander.Content>

                            <Frame Grid.Row="4" CornerRadius="40" HasShadow="False" Margin="0" BorderColor="Transparent" Padding="8">
                                <Grid Padding="0" RowDefinitions="Auto, Auto, Auto, Auto, *">
                                    <!-- New Row for Add Button -->
                                    <Button Text="Novo" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=AddVaccineCommand}" 
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        HeightRequest="25" 
                                        WidthRequest="60"
                                        CornerRadius="15"
                                        Padding="0"
                                        FontSize="11"
                                        FontAttributes="Bold"
                                        Margin="0, 3, 0, 8"
                                        BackgroundColor="SteelBlue"
                                        Grid.Row="0" />
                                    <BoxView Grid.Row="1" HeightRequest="1" BackgroundColor="Gray" Margin="0,1,0,2"/>
                                    <!-- Existing Header Row -->
                                    <Grid ColumnDefinitions=".3*, .4*, .3*" 
                                          ColumnSpacing="2"
                                          Grid.Row="2">
                                        <Label FontAttributes="Bold" FontSize="10" Text="Toma" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" />
                                        <Label FontAttributes="Bold" FontSize="10" Text="Marca" Grid.Row="0" Grid.Column="1"/>
                                        <Label FontAttributes="Bold" FontSize="10" Text="Prx. Toma" Grid.Row="0" Grid.Column="2" HorizontalOptions="Center" />
                                    </Grid>
                                    <BoxView Grid.Row="3" HeightRequest="1" BackgroundColor="Gray" Margin="0,1,0,2"/>

                                    <!-- CollectionView Row -->
                                    <CollectionView Grid.Row="4"
                                            x:Name="VaccinesView"
                                            ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=PetVaccinesVM}" 
                                            SelectionMode="Single">
                                            <CollectionView.EmptyView>
                                                <StackLayout Grid.Column="1" 
                                                     Padding="10">
                                                    <Image
                                                            HorizontalOptions="Center"
                                                            HeightRequest="80"
                                                            WidthRequest="80"
                                                            Source="nopets.png"
                                                            VerticalOptions="Center" />
                                                <Label HorizontalOptions="Center" Padding="10">No data for vaccines</Label>
                                            </StackLayout>
                                        </CollectionView.EmptyView>

                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout Orientation="Vertical" />
                                        </CollectionView.ItemsLayout>

                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="models:VacinaVM">
                                                <SwipeView>
                                                    <SwipeView.RightItems>
                                                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                                                            <SwipeItem Text="Apagar"
                                                                   IconImageSource="icon_delete.svg" 
                                                                   BackgroundColor="Transparent"
                                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel }}, Path=DeleteVacinaCommand}" 
                                                                   CommandParameter="{Binding .}"/>
                                                        </SwipeItems>
                                                    </SwipeView.RightItems>

                                                    <VerticalStackLayout>
                                                        <Frame CornerRadius="10" HeightRequest="30"
                                                               VerticalOptions="Center"
                                                               HasShadow="True" 
                                                               Margin="3" 
                                                               Padding="0">
                                                            <Frame.GestureRecognizers>
                                                                <TapGestureRecognizer 
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=EditVaccineCommand}"
                                                                    CommandParameter="{Binding .}"/>
                                                            </Frame.GestureRecognizers>

                                                            <Grid ColumnSpacing="2" ColumnDefinitions=".3*, .4*, .3*" Margin="0,4">
                                                                <Label FontAttributes="Bold" FontSize="10"  Grid.Column="0"  Text="{Binding DataTomaFormatada}" HorizontalOptions="Center"/>
                                                                <Label FontAttributes="Bold" FontSize="10" Grid.Column="1" Text="{Binding Marca}"/>
                                                                <Label FontAttributes="Bold" FontSize="10" Grid.Column="2" Text="{Binding DataProximaToma, StringFormat='{0:dd/MM/yyyy}' }" 
                                                                       TextColor="{Binding DataProximaToma, Converter={StaticResource nextDoseDateConverter}}" HorizontalOptions="Center"/>
                                                            </Grid>
                                                        </Frame>
                                                    </VerticalStackLayout>
                                                </SwipeView>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </Frame>
                        </mct:Expander.Content>
                    </mct:Expander>
                </Border>
                <Border Grid.Row="5" Stroke="#2B0B98"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 40,0,0,40"
                    Background="#fff"
                    Padding="8,4"
                    Margin="2"
                    HorizontalOptions="FillAndExpand">

                    <mct:Expander Padding="6" Margin="2"
                                  IsExpanded="false" IsClippedToBounds="True" >
                        <mct:Expander.Header>
                            <Frame 
                            BorderColor="Black"
                            BackgroundColor="LightSteelBlue"
                            CornerRadius="10">
                                <Label Text="Desparasitantes" FontSize="14" 
                                       FontAttributes="Bold" TextColor="Black"/>
                            </Frame>
                        </mct:Expander.Header>
                        <mct:Expander.Content>

                            <Frame Grid.Row="5" CornerRadius="40" HasShadow="False" Margin="0" BorderColor="Transparent" Padding="8">
                                <Grid Padding="0" RowDefinitions="Auto, Auto, Auto, Auto, *">
                                    <Button Text="Novo" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=AddDewormerCommand}" 
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        HeightRequest="25" 
                                        WidthRequest="60"
                                        CornerRadius="15"
                                        Padding="0"
                                        FontSize="11"
                                        FontAttributes="Bold"
                                        Margin="0, 3, 0, 8"
                                        BackgroundColor="SteelBlue"
                                        Grid.Row="0" />
                                    <BoxView Grid.Row="1" HeightRequest="1" BackgroundColor="Gray" Margin="0,1,0,2"/>
                                    <Grid ColumnDefinitions=".23*, .5*, .27*" ColumnSpacing="2"
                                          Grid.Row="2">
                                        <Label FontAttributes="Bold" FontSize="10" Text="Toma" Grid.Row="0" Grid.Column="0" />
                                        <Label FontAttributes="Bold" FontSize="10" Text="Marca" Grid.Row="0" Grid.Column="1"/>
                                        <Label FontAttributes="Bold" FontSize="10" Text="Prx. Toma" Grid.Row="0" Grid.Column="2" />
                                    </Grid>
                                    <BoxView Grid.Row="3" HeightRequest="1" BackgroundColor="Gray" Margin="0,1,0,2"/>
                                    <CollectionView Grid.Row="4" 
                                        x:Name="DewormersView"
                                        ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=PetDewormersVM}" 
                                        SelectionMode="Single">
                                        <CollectionView.EmptyView>
                                            <StackLayout Grid.Column="1" 
                                             Padding="10">
                                                <Image
                                                HorizontalOptions="Center"
                                                HeightRequest="80"
                                                WidthRequest="80"
                                                Source="nopets.png"
                                                VerticalOptions="Center" />
                                                <Label HorizontalOptions="Center" Padding="10">No data for Dewormers</Label>
                                            </StackLayout>
                                        </CollectionView.EmptyView>
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout Orientation="Vertical" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="models:DesparasitanteVM">
                                                <SwipeView>
                                                    <SwipeView.RightItems>
                                                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                                                            <SwipeItem Text="Apagar"
                                                       IconImageSource="icon_delete.svg" 
                                                       BackgroundColor="Transparent"
                                                       Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel }}, Path=DeleteDesparasitanteCommand}" 
                                                       CommandParameter="{Binding .}"/>
                                                        </SwipeItems>
                                                    </SwipeView.RightItems>
                                                    <VerticalStackLayout>
                                                        <Frame CornerRadius="10" HeightRequest="30"
                                                           VerticalOptions="Center"
                                                           HasShadow="True" 
                                                           Margin="3" 
                                                           Padding="2">
                                                            <Frame.GestureRecognizers>
                                                                <TapGestureRecognizer 
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=EditDewormerCommand}"
                                                                CommandParameter="{Binding .}"/>
                                                            </Frame.GestureRecognizers>
                                                            <Grid ColumnSpacing="2" ColumnDefinitions=".23*, .5*, .27*" Margin="3,3">
                                                                <Label FontAttributes="Bold" FontSize="10" Grid.Column="0" Text="{Binding DataAplicacao}"/>
                                                                <Label FontAttributes="Bold" FontSize="10" Grid.Column="1" Text="{Binding Marca}"/>
                                                                <Label FontAttributes="Bold" FontSize="10" Grid.Column="2" Text="{Binding DataProximaAplicacao}"
                                                       TextColor="{Binding DataProximaAplicacao, Converter={StaticResource nextDoseDateConverter}}"/>
                                                            </Grid>
                                                        </Frame>
                                                    </VerticalStackLayout>
                                                </SwipeView>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </Frame>
                        </mct:Expander.Content>
                    </mct:Expander>
                </Border>
                <Border Grid.Row="6" Stroke="#2B0B98"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 40,0,0,40"
                    Background="#fff"
                    Padding="8,4"
                    Margin="2"
                    HorizontalOptions="FillAndExpand">

                    <mct:Expander Padding="6" Margin="2"
                                  IsExpanded="false" IsClippedToBounds="True" >
                        <mct:Expander.Header>
                            <Frame 
                                BorderColor="Black"
                                BackgroundColor="LightSteelBlue"
                                CornerRadius="10">
                                <Label Text="Ração" FontSize="14" 
                                      FontAttributes="Bold" TextColor="Black"/>
                            </Frame>
                        </mct:Expander.Header>
                        <mct:Expander.Content>
                            <Frame Grid.Row="6" CornerRadius="40" HasShadow="False" Margin="0" BorderColor="Transparent" Padding="8">
                                <Grid Padding="0" RowDefinitions="Auto, Auto, Auto, Auto, *">
                                    <Button Text="Novo" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=AddPetFoodCommand}" 
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        HeightRequest="25" 
                                        WidthRequest="60"
                                        CornerRadius="15"
                                        Padding="0"
                                        FontSize="11"
                                        FontAttributes="Bold"
                                        Margin="0, 3, 0, 8"
                                        BackgroundColor="SteelBlue"
                                        Grid.Row="0" />
                                    <BoxView Grid.Row="1" HeightRequest="1" BackgroundColor="Gray" Margin="0,1,0,2"/>
                                    <Grid ColumnDefinitions=".23*, .5*, .27*" ColumnSpacing="2"
                                          Grid.Row="2">
                                        <Label FontSize="10" Text="Compra" Grid.Row="0" Grid.Column="0" />
                                        <Label FontSize="10" Text="Marca" Grid.Row="0" Grid.Column="1"/>
                                        <Label FontSize="10" Text="Qtd. diária" Grid.Row="0" HorizontalOptions="Center" Grid.Column="2" />
                                    </Grid>
                                    <BoxView Grid.Row="3" HeightRequest="1" BackgroundColor="Gray" Margin="0,1,0,2"/>
                                    <CollectionView Grid.Row="4"
                                        x:Name="FoodView"
                                        ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=PetFoodVM}" 
                                        SelectionMode="Single">
                                        <CollectionView.EmptyView>
                                            <StackLayout Grid.Column="1" Padding="10">
                                                <Image
                                                    HorizontalOptions="Center"
                                                    HeightRequest="80"
                                                    WidthRequest="80"
                                                    Source="nopets.png"
                                                    VerticalOptions="Center" />
                                                <Label HorizontalOptions="Center" Padding="10">No data for Pet food</Label>
                                            </StackLayout>
                                        </CollectionView.EmptyView>
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout Orientation="Vertical" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="models:RacaoVM">
                                                <SwipeView>
                                                    <SwipeView.RightItems>
                                                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                                                            <SwipeItem Text="Apagar"
                                                       IconImageSource="icon_delete.svg" 
                                                       BackgroundColor="Transparent"
                                                       Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel }}, Path=DeletePetFoodCommand}" 
                                                       CommandParameter="{Binding .}"/>
                                                        </SwipeItems>
                                                    </SwipeView.RightItems>
                                                    <VerticalStackLayout>
                                                        <Frame CornerRadius="10" HeightRequest="30"
                                                           VerticalOptions="Center"
                                                           HasShadow="True" 
                                                           Margin="3" 
                                                           Padding="2">
                                                            <Frame.GestureRecognizers>
                                                                <TapGestureRecognizer 
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=EditPetFoodCommand}"
                                                                CommandParameter="{Binding .}"/>
                                                            </Frame.GestureRecognizers>
                                                            <Grid ColumnSpacing="2" ColumnDefinitions=".23*, .5*, .27*">
                                                                <Label Grid.Column="0" FontAttributes="Bold" FontSize="10" Text="{Binding DataCompra}"/>
                                                                <Label Grid.Column="1" FontSize="10" Text="{Binding Marca}"/>
                                                                <Label Grid.Column="2" HorizontalTextAlignment="Center" FontSize="10" Text="{Binding QuantidadeDiaria, StringFormat='{0}' }"/>
                                                            </Grid>
                                                        </Frame>
                                                    </VerticalStackLayout>
                                                </SwipeView>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </Frame>
                        </mct:Expander.Content>
                    </mct:Expander>
                </Border>
                <Border Grid.Row="7" Stroke="#2B0B98"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 40,0,0,40"
                    Background="#fff"
                    Padding="8,2,8,0"
                    Margin="2"
                    HorizontalOptions="FillAndExpand">
                    <mct:Expander Padding="6" Margin="2"
                                  IsExpanded="false" IsClippedToBounds="True" >
                        <mct:Expander.Header>
                            <Frame 
                                    BorderColor="Black"
                                    BackgroundColor="LightSteelBlue"
                                    CornerRadius="10">
                                <Label Text="Consultas no veterinário" FontSize="14" 
                                       FontAttributes="Bold" TextColor="Black"/>
                            </Frame>
                        </mct:Expander.Header>
                        <mct:Expander.Content>

                            <Frame Grid.Row="7" CornerRadius="40" HasShadow="False" Margin="5" BorderColor="Transparent" Padding="8">
                                <Grid Padding="0" RowDefinitions="Auto, Auto, Auto, Auto, *">
                                    <Button Text="Novo" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=AddVetAppointmentCommand}" 
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        HeightRequest="25" 
                                        WidthRequest="60"
                                        CornerRadius="15"
                                        Padding="0"
                                        FontSize="11"
                                        FontAttributes="Bold"
                                        Margin="0, 3, 0, 8"
                                        BackgroundColor="SteelBlue"
                                        Grid.Row="0" />
                                    <BoxView Grid.Row="1" HeightRequest="1" BackgroundColor="Gray" Margin="0,1,0,2"/>

                                    <Grid ColumnDefinitions="100, *" ColumnSpacing="4"
                                          Grid.Row="0">
                                        <Label FontSize="10" Text="Visita" Grid.Row="0" Grid.Column="0" />
                                        <Label FontSize="10" Text="Motivo" Grid.Row="0" Grid.Column="1"/>
                                    </Grid>
                                    <CollectionView Grid.Row="6" HeightRequest="200"
                                    x:Name="ConsultationsView"
                                    ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=PetConsultationsVM}" 
                                    SelectionMode="Single">
                                        <CollectionView.EmptyView>
                                            <StackLayout Grid.Column="1" 
                                         Padding="10">
                                                <Image
                                                HorizontalOptions="Center"
                                                HeightRequest="80"
                                                WidthRequest="80"
                                                Source="nopets.png"
                                                VerticalOptions="Center" />
                                                <Label HorizontalOptions="Center" Padding="10">No data for Pet consultations</Label>
                                            </StackLayout>
                                        </CollectionView.EmptyView>
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout Orientation="Vertical" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="models:ConsultaVeterinarioVM">
                                                <SwipeView>
                                                    <SwipeView.RightItems>
                                                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                                                            <SwipeItem Text="Apagar"
                                                       IconImageSource="icon_delete.svg" 
                                                       BackgroundColor="Transparent"
                                                       Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel }}, Path=DeletePetAppointmentCommand}" 
                                                       CommandParameter="{Binding .}"/>
                                                        </SwipeItems>
                                                    </SwipeView.RightItems>
                                                    <VerticalStackLayout>
                                                        <Frame CornerRadius="10" HeightRequest="30"
                                                           VerticalOptions="Center"
                                                           HasShadow="True" 
                                                           Margin="3" 
                                                           Padding="2">
                                                            <Frame.GestureRecognizers>
                                                                <TapGestureRecognizer 
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PetDetailViewModel}}, Path=EditVetAppointmentCommand}"
                                                                CommandParameter="{Binding .}"/>
                                                            </Frame.GestureRecognizers>
                                                            <Grid ColumnSpacing="2" ColumnDefinitions=".3*, .7*">
                                                                <Label Grid.Column="0" FontAttributes="Bold" FontSize="10" Text="{Binding DataConsulta}"/>
                                                                <Label Grid.Column="1" FontSize="10" Text="{Binding Motivo}"/>
                                                            </Grid>
                                                        </Frame>
                                                    </VerticalStackLayout>
                                                </SwipeView>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>

                                    </CollectionView>
                                </Grid>
                            </Frame>
                        </mct:Expander.Content>
                    </mct:Expander>
                </Border>
            </Grid>
        </ScrollView>
        <ActivityIndicator
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Fill"
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    Color="{StaticResource Primary}"
                    VerticalOptions="Center" />
    </Grid>
</ContentPage>
    