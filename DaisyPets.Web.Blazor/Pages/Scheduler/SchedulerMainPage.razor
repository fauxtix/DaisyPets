@page "/scheduler"

@using DaisyPets.Core.Application.ViewModels.Scheduler;
@using DaisyPets.Core.Domain.Scheduler;
@using Microsoft.Extensions.Localization;
@using Syncfusion.Blazor.Schedule
@using System.Net.Sockets;
