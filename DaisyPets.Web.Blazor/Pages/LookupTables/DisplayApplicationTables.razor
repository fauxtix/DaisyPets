    ..table-card {
         background: radial-gradient(#c000, #c0c0);
        margin: 20px;
        padding: 20px;
        width: 500px;
        min-height: 200px;
        display: grid;
        grid-template-rows: 20px 50px 1fr 50px;
        border-radius: 10px;
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.25);
        transition: all 0.8s;
    }

    .table-card:hover {
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.4);
