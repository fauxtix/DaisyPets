@using DaisyPets.Web.Blazor.Components.Cards
@using Microsoft.Extensions.Localization;

<div class="cards">
    <div class="table-card">
        <LookupTableCard cardContent="@L["MSG_EstadoCivil"]"
                         cardImage="Doctors.svg" cardTitle="@BreedTitle" tableParam="Raca"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="@DewormerTitle"
                         cardImage="Doctors.svg" cardTitle="@DewormerTitle" tableParam="Desparasitante"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="@TemperamentTitle"
                         cardImage="Doctors.svg" cardTitle="@TemperamentTitle" tableParam="Temperamento"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="@SituationTitle"
                         cardImage="Doctors.svg" cardTitle="@SituationTitle" tableParam="Situacao"></LookupTableCard>
    </div>
    <div class="table-card">
        <LookupTableCard cardContent="@ContactTyoeTitle"
                         cardImage="Doctors.svg" cardTitle="@ContactTyoeTitle" tableParam="TipoContacto"></LookupTableCard>
    </div>
</div>

@code {
    [Inject]
    public IStringLocalizer<App> L { get; set; }

    private string? BreedTitle;
    private string? DewormerTitle;
    private string? TemperamentTitle;
    private string? SituationTitle;
    private string? ContactTyoeTitle;

    protected override void OnInitialized()
    {
        BreedTitle = L["MSG_EstadoCivil"];
        DewormerTitle = L["TituloEstadoConservacao"];
        TemperamentTitle = L["TituloTipoPagamento"];
        SituationTitle = L["TituloSituacaoFracao"];
        ContactTyoeTitle = L["TituloTipoContacto"];
    }
}
<style>

    .table-cards {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        border: 1px solid rgba(0, 0, 0, 0.8);
