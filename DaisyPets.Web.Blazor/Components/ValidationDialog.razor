@using Microsoft.Extensions.Localization;
<SfDialog Target="#target"
          Width="600px"
          Height="300x"
          MinHeight="250px"
          IsModal="true"
          ShowCloseIcon="false"
          AllowDragging="true"
          @bind-Visible="ErrorVisibility">
    <DialogTemplates>
        <Content>
            <div class="modal-dialog modal-confirm">
                <div class="modal-content">
                    <div class="modal-header justify-content-center">
                        <div class="icon-box">
                            <i class="fas fa-warning"></i>
                        </div>
                        <div class="modal-body text-center">
                            <h4 class="modal-title w-100">@L["TituloVerificar"]</h4>
                        </div>
                    </div>
                    <div class="modal-body text-wrap">
                        @if (ErrorListMsgs != null)
                        {
                            <br />
                            foreach (string errorMsg in ErrorListMsgs)
                            {
                                <div class="px-2"> @(errorMsg)</div>
                            }
                        }
                    </div>
                </div>
            </div>
        </Content>
        <FooterTemplate>
            <div class="modal-footer">
                <SfButton CssClass="e-btn e-normal e-outline e-icon e-round-corner" IconCss="fas fa-times"
                          @onclick="closeValidationErrorBox" Content="@L["btnFechar"]">
                </SfButton>
            </div>
        </FooterTemplate>
    </DialogTemplates>
    <DialogAnimationSettings Effect="@Effects" Duration=500></DialogAnimationSettings>
</SfDialog>

@code {
    [Parameter] public List<string> ErrorListMsgs { get; set; } = new List<string>();
    [Parameter] public bool ErrorVisibility { get; set; } = false;
    [Parameter] public DialogEffect Effects { get; set; } = DialogEffect.FadeZoom;

    [Inject] public IStringLocalizer<App> L { get; set; }
    public void closeValidationErrorBox()
    {
        ErrorVisibility = false;
    }
}

<style>
    .modal-confirm {
        color: #434e65;
        width: 525px;
    }

        .modal-confirm .modal-content {
            padding: 20px;
            font-size: 16px;
            border-radius: 5px;
            border: dashed;
        }

        .modal-confirm .modal-header {
            background: #e85e6c;
            border-bottom: none;
            position: relative;
            text-align: center;
            margin: -20px -20px 0;
            border-radius: 5px 5px 0 0;
            padding: 35px;
        }

        .modal-confirm h4 {
            text-align: center;
            font-size: 24px;
            margin: 10px 0;
            color: white;
        }

        .modal-confirm .form-control, .modal-confirm .btn {
            min-height: 40px;
            border-radius: 3px;
        }

        .modal-confirm .close {
            position: absolute;
            top: 15px;
            right: 15px;
            color: #fff;
            text-shadow: none;
            opacity: 0.5;
        }

            .modal-confirm .close:hover {
                opacity: 0.8;
            }

        .modal-confirm .icon-box {
            color: black;
            width: 75px;
            height: 75px;
            display: inline-block;
            border-radius: 50%;
            z-index: 6;
            border: 5px solid #000;
            padding: 5px;
            text-align: center;
        }

            .modal-confirm .icon-box i {
                font-size: 48px;
                margin: -2px 0 0 -2px;
            }

        .modal-confirm.modal-dialog {
            margin-top: 5px;
        }

        .modal-confirm .btn, .modal-confirm .btn:active {
            color: #fff;
            border-radius: 4px;
            background: #eeb711 !important;
            text-decoration: none;
            transition: all 0.4s;
            line-height: normal;
            border-radius: 30px;
            margin-top: 10px;
            padding: 6px 20px;
            min-width: 150px;
            border: none;
        }

            .modal-confirm .btn:hover, .modal-confirm .btn:focus {
                background: #eda645 !important;
                outline: none;
            }
</style>